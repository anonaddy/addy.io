{
    "private": true,
    "scripts": {
        "local": "mix",
        "staging": "cross-env NODE_ENV=staging node_modules/webpack/bin/webpack.js --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
        "production": "mix --production",
        "dev": "npm run local",
        "prod": "npm run production",
        "watch": "mix watch",
        "format": "prettier --write 'source/_assets/**/*.{css,js,vue}'",
        "pre-commit": "lint-staged",
        "prepare": "husky install"
    },
    "dependencies": {
        "autoprefixer": "^10.2.4",
        "axios": "^0.21.1",
        "browser-sync": "^2.26.14",
        "browser-sync-webpack-plugin": "^2.3.0",
        "cross-env": "^7.0.3",
        "extra-watch-webpack-plugin": "^1.0.3",
        "fuse.js": "^6.0.0",
        "hasbin": "^1.2.3",
        "highlight.js": "^11.0.0",
        "laravel-mix": "^6.0.11",
        "node-cmd": "^4.0.0",
        "postcss": "^8.1.14",
        "postcss-import": "^14.0.2",
        "tailwindcss": "^2.0.1",
        "vue": "^2.6.12",
        "vue-loader": "^15.9.6",
        "vue-template-compiler": "^2.6.12",
        "yargs": "^17.0.1"
    },
    "devDependencies": {
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.2.1"
    },
    "lint-staged": {
        "source/_assets/**/*.{css,js,vue}": [
            "prettier --write"
        ],
        "*.php": [
            "composer format"
        ]
    }
}
